{
  "compilerOptions": {
    "strict": true,
    "rootDir": "./src",
    "target": "es2022",
    "module": "ESNext",
    // "outDir": "./dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": [
      "@webgpu/types",
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}